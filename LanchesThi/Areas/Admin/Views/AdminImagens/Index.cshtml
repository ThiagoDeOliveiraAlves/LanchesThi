<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-asp-controller="AdminImagens" asp-action="UploadFiles">

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais arrquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos</p>

                        <input type="file" name="files" multiple class="accordion-button btn-outline-primary" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="accordion-button btn-outline-primary" />
                    </div>
                </div>

            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-asp-controller="AdminImagens" asp-action="GetImagens">
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor" class="accordion-button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>

<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>
